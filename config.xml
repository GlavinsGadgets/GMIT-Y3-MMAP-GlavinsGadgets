<?xml version='1.0' encoding='utf-8'?>
<widget id="com.pgb.GlavinsGadgets" version="1.0.8" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="https://phonegap.com/ns/1.0">

    <name>Glavins Gadgets</name>
	
    <description>
		This app is your one stop shop to everything GG related.
	</description>
    
	<author email="eannagglavin@gmail.com" href="https://www.facebook.com/GlavinsGadgets/">
	   Glavins Gadgets
	</author>
    
	<content src="index.html" />
    
	<preference name="phonegap-version" value="cli-6.5.0" />
    <preference name="permissions" value="none" />
    <preference name="orientation" value="default" />
    <preference name="fullscreen" value="false" />
    <preference name="SplashScreen" value="screen" />
    
	<platform name="android" />
    <platform name="android">
        <icon density="ldpi" src="icon.png" />
        <icon density="mdpi" src="icon.png" />
        <icon density="hdpi" src="icon.png" />
        <icon density="xhdpi" src="icon.png" />
        <icon density="xxhdpi" src="icon.png" />
        <icon density="xxxhdpi" src="icon.png" />
    </platform>
    
	<plugin name="cordova-plugin-device" spec="~1.1.7" />
    <plugin name="cordova-plugin-whitelist" spec="~1.3.3" />
    <plugin name="cordova-plugin-inappbrowser" spec="~1.7.2" />
	<plugin name="cordova-plugin-dialogs" spec="~1.3.4" />
    
	<access origin="http://*" />
    <access origin="https://*" />
    <access launch-external="yes" origin="mailto:*" />
    <access launch-external="true" origin="tel:*" />
    
	<allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="tel:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="market:*" />
    
</widget>
